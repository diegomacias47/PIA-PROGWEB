@model ModeloUsuario

@{
    ViewData["Title"] = "Registro";
    Layout = "_Login";
}



<div class="card p-2 form-tarjeta ">
    <form method="post" asp-controller="Home" asp-action="UsuarioRegistro" class="formulario">
        <div asp-validation-summary="ModelOnly"></div>

        <div class="form-group">
            <label asp-for="Nombre">Nombre de usuario:</label>
            <input asp-for="Nombre" class="form-control" placeholder="Nombre del usuario..." value="" />
            <span class="text-danger" asp-validation-for="Nombre"></span>
        </div>

        <div class="form-group">
            <label asp-for="Correo">Correo electronico:</label>
            <input type="email" asp-for="Correo" class="form-control" placeholder="Correo del usuario..." value="" />
            <span class="text-danger" asp-validation-for="Correo"></span>
        </div>


        <div class="form-group">
            <label asp-for="Contrasena">Contraseña:</label>
            <input type="password" asp-for="Contrasena" class="form-control" placeholder="Contraseña del usuario..." value="" />
            <span class="text-danger" asp-validation-for="Contrasena"></span>
        </div>



        <button type="submit">Registrar</button>

    </form>

</div>

